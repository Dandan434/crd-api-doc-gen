/* ------------------------------------------------------------------------------------------
 * Content
 * ------------------------------------------------------------------------------------------ */


* {
  font-family: 'Source Code Pro', sans-serif;
}
body {
  min-width: 980px;
}

.app-desc {
  color: #808080
}

body, p, a, div, th, td, li {
  font-family: "Source Sans Pro", sans-serif;
  font-weight: 400;
  font-size: 16px;
  text-shadow: none !important;
}

#content {
  padding-top: 16px;
  z-Index: -1;
  margin-left: 270px;
}

p {
  color: #808080;
}

h1 {
  font-family: "Source Sans Pro Semibold", sans-serif;
  font-weight: normal;
  font-size: 44px;
  line-height: 50px;
  margin: 0 0 10px 0;
  padding: 0;
}

h2 {
  font-family: "Source Sans Pro", sans-serif;
  font-weight: normal;
  font-size: 24px;
  line-height: 40px;
  margin: 0 0 20px 0;
  padding: 0;
}

section {
  border-top: 1px solid #ebebeb;
  padding: 30px 0;
}

section h1 {
  font-family: "Source Sans Pro", sans-serif;
  font-weight: 700;
  font-size: 32px;
  line-height: 40px;
  padding-bottom: 14px;
  margin: 0 0 20px 0;
  padding: 0;
}

table {
  width: 100%;
}

p {
  margin: 0;
}

/* ------------------------------------------------------------------------------------------
 * Sidenav
 * ------------------------------------------------------------------------------------------ */

.sidenav {
  width: 228px;
  margin: 0;
  padding: 20px;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  overflow-x: hidden;
  overflow-y: auto;
  background-color: #f5f5f5;
  z-index: 10;
}

.sidenav > li {
  list-style-type: none;
}

.sidenav > li > a {
  display: block;
  margin: 0;
  padding: 5px 15px;
  border: 1px solid #e5e5e5;
  width: 190px;
  font-family: "Source Sans Pro", sans-serif;
  font-weight: 700;
  font-size: 16px;
  background-color: #4c8eca;
  color: #fff;
  text-decoration: none;
}

.sidenav > li > a:hover {
  background-color: #4eb4f9;
  color: #4a4a4a;
  text-decoration: none;
}

/* ------------------------------------------------------------------------------------------
 * CRD
 * ------------------------------------------------------------------------------------------ */

.crd {
  display: flex;
  flex-direction: column;
}

.crd table, tr, td {
    border: none;
    padding: 0;
    vertical-align: top;
}

.crd p {
  color: black;
}

.crd .crd-info {
  display: flex;
  flex-direction: row;
  padding-bottom: 1em;
}

.crd .crd-name {
  font-size: 2em;
  line-height: 1em;
  color: #4c8eca;
}

.crd .crd-version {
  font-size: 1.2em;
  margin-left: 1em;
  line-height: 2em;
  color: #808080;
}

.crd .crd-description {
  margin-bottom: 0.5em;
  font-weight: bold;
  font-size: 1.2em;
}

.crd .properties-caption {
  font-weight: bold;
  margin-bottom: 0.5em;
}

.crd .schema {
  margin-left: 0.5em;
  border-spacing: 0;
  border-collapse: collapse;
  display: block;
  width: 99%;
}

.crd .prop-info {
  background-color: #f5f5f5;
  height: 3em;
}

.crd .prop-name {
  font-weight: bold;
  padding-right: 1em;
}

.crd .prop-type-info {
  padding-right: 1em;
}

.crd .prop-properties-caption {
  font-size: 0.8em;
  padding-right: 1em;
}

.crd .prop-type {
  font-style: italic;
}

.crd .prop-default {
  font-size: 0.8em;
}

.crd .prop-enum {
  font-size: 0.8em;
}

.crd .prop-required {
  font-weight: bold;
  font-variant:small-caps;
  font-size: 1.1em;
  color: #d02020;
}

.crd .prop-description {
}

.crd .prop-additionalProperties {
  font-size: 0.8em;
  font-style: italic;
}

.crd .prop-properties {
  background-color: #f5f5f5;
}

.crd .prop-div {
  height: 0.2em;
  border-top: 1px solid #bdbdbd;
}

.crd .prop-div:last-of-type {
  border-top: none;
}
